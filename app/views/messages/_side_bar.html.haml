.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "icon-edit" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "icon-edit" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-list
        = link_to group_messages_path(group) do
          .group-list__name
            =group.name
          .group-list__message
            = group.show_last_message
